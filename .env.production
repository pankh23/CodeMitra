# Production Environment Configuration
NODE_ENV=production

# Database Configuration
DATABASE_URL=postgresql://codemitra_user:secure_password@postgres:5432/codemitra_prod
POSTGRES_DB=codemitra_prod
POSTGRES_USER=codemitra_user
POSTGRES_PASSWORD=secure_password

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=secure_redis_password

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=5000
FRONTEND_URL=https://codemitra.com
BACKEND_URL=https://api.codemitra.com

# NextAuth Configuration
NEXTAUTH_URL=https://codemitra.com
NEXTAUTH_SECRET=your_nextauth_secret_key_here

# Worker Configuration
WORKER_TIMEOUT=30000
WORKER_MEMORY_LIMIT=512m
WORKER_CPU_LIMIT=0.5
MAX_CONCURRENT_EXECUTIONS=10

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=https://codemitra.com

# File Upload Configuration
MAX_FILE_SIZE=10MB
UPLOAD_PATH=/app/uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/app/logs/app.log

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@codemitra.com
SMTP_PASSWORD=your_smtp_password

# Cloud Storage (Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=codemitra-storage

# CDN Configuration
CDN_URL=https://cdn.codemitra.com

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/codemitra.crt
SSL_KEY_PATH=/etc/ssl/private/codemitra.key

# Database Connection Pool
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000

# Redis Connection Pool
REDIS_POOL_MIN=5
REDIS_POOL_MAX=20
